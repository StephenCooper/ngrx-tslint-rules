{
  "$schema": "http://json-schema.org/schema",
  "id": "SchematicsNgRxTSLintRules",
  "title": "ngrx-tslint-rules schema",
  "type": "object",
  "properties": {
    "path": {
      "type": "string",
      "format": "path",
      "description": "The path to the tslint.json file.",
      "default": "tslint.json"
    },
    "rules": {
      "type": "array",
      "description": "Rules to use in a project",
      "default": "[recommended]",
      "x-prompt": {
        "message": "Choose the rules to use in your project:",
        "type": "list",
        "multiselect": true,
        "items": [
          {
            "value": "recommended",
            "label": "ngrx-tslint-rules/recommended (configuration file to enable all the rules)"
          },
          {
            "value": "ngrx-action-hygiene",
            "label": "ngrx-action-hygiene"
          },
          {
            "value": "ngrx-effect-creator-and-decorator",
            "label": "ngrx-effect-creator-and-decorator"
          },
          {
            "value": "ngrx-no-duplicate-action-types",
            "label": "ngrx-no-duplicate-action-types"
          },
          {
            "value": "ngrx-selector-for-select",
            "label": "ngrx-selector-for-select"
          },
          {
            "value": "ngrx-unique-reducers-action",
            "label": "ngrx-unique-reducers-action"
          }
        ]
      }
    }
  },
  "required": []
}
